FROM node:18-alpine

# Set working directory
WORKDIR /app

# Copy package files
COPY package*.json ./
COPY bot/package*.json ./bot/

# Install dependencies
RUN npm install
RUN cd bot && npm install

# Copy source code
COPY . .

# Build TypeScript
RUN cd bot && npm run build

# Set environment to production
ENV NODE_ENV=production

# Start bot
CMD ["npm", "run", "start:bot"]
